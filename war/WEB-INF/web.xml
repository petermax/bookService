<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
	    <servlet-name>ShowBooks</servlet-name>
	    <servlet-class>com.bookService.BookList</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowBooks</servlet-name>
		<url-pattern>/show-books</url-pattern>
	</servlet-mapping>
	<servlet>
	  <servlet-name>Addbook</servlet-name>
	  <servlet-class>com.bookService.addbook</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>Addbook</servlet-name>
	  <url-pattern>/addbook</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>mybook.jsp</welcome-file>
	</welcome-file-list>
</web-app>